    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "The purpose of this site is to publish videos about the Catalan independence movement and videos of complain of the intolerance and violence of Spain with Catalonia.", :name => "description"}/
    %meta{:content => "The Yellows", :name => "author"}/
    %title The Yellows
    = csrf_meta_tags
    = favicon_link_tag 'favicon.ico'
